<%= content_for :title, t('subscriptions.your_subscription') %>

<div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">
      <%= t('subscriptions.your_subscription') %>
    </h1>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 mb-6">
      <div class="grid grid-cols-2 gap-6">
        <div>
          <p class="text-sm text-gray-500 dark:text-gray-400"><%= t('subscriptions.current_tier') %></p>
          <p class="text-xl font-semibold text-gray-900 dark:text-white capitalize">
            <%= @subscription.tier %>
          </p>
        </div>
        
        <div>
          <p class="text-sm text-gray-500 dark:text-gray-400"><%= t('subscriptions.status') %></p>
          <p class="text-xl font-semibold <%= @subscription.active? ? 'text-green-600' : 'text-red-600' %>">
            <%= @subscription.status.capitalize %>
          </p>
        </div>

        <div>
          <p class="text-sm text-gray-500 dark:text-gray-400"><%= t('subscriptions.queries_this_month') %></p>
          <p class="text-xl font-semibold text-gray-900 dark:text-white">
            <%= @usage_this_month %>
            <% unless @subscription.unlimited? %>
              <span class="text-sm text-gray-500">/ <%= @subscription.daily_limit * 30 %></span>
            <% end %>
          </p>
        </div>

        <% if @subscription.current_period_end %>
          <div>
            <p class="text-sm text-gray-500 dark:text-gray-400"><%= t('subscriptions.next_billing') %></p>
            <p class="text-xl font-semibold text-gray-900 dark:text-white">
              <%= l(@subscription.current_period_end, format: :long) rescue @subscription.current_period_end.strftime('%d %B %Y') %>
            </p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex gap-4">
      <% if @subscription.free? %>
        <%= link_to pricing_path, class: "flex-1 py-3 px-4 text-center rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700 transition" do %>
          <%= t('subscriptions.upgrade') %>
        <% end %>
      <% elsif @subscription.professional? && @subscription.active? && !@subscription.canceled_at %>
        <%= button_to cancel_subscription_path, method: :post, 
            data: { confirm: 'Weet u zeker dat u uw abonnement wilt annuleren?' },
            class: "flex-1 py-3 px-4 text-center rounded-lg bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400 font-semibold hover:bg-red-200 dark:hover:bg-red-900/50 transition" do %>
          <%= t('subscriptions.cancel_subscription') %>
        <% end %>
      <% elsif @subscription.canceled_at %>
        <%= button_to reactivate_subscription_path, method: :post,
            class: "flex-1 py-3 px-4 text-center rounded-lg bg-green-600 text-white font-semibold hover:bg-green-700 transition" do %>
          <%= t('subscriptions.reactivate') %>
        <% end %>
      <% end %>
    </div>

    <div class="mt-8 text-center">
      <%= link_to chatbot_path, class: "text-blue-600 hover:underline" do %>
        ‚Üê Terug naar Chatbot
      <% end %>
    </div>
  </div>
</div>
