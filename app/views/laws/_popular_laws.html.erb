              <% if summary.present? %>
                <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2 mb-2"><%= truncate(summary.to_s.gsub(/\s+/, ' ').strip, length: 100) %></p>
              <% end %>
              <div class="flex items-center justify-between text-xs text-gray-500 dark:text-gray-400">
                <div class="flex items-center gap-2">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  <%= decision_date %>
                </div>
                <% if subject_label.present? %>
                  <span class="px-1.5 py-0.5 bg-gray-100 dark:bg-gray-700 rounded text-xs"><%= subject_label %></span>
                <% end %>
              </div>
            </a>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8 text-gray-500 dark:text-gray-400">
          <svg class="w-12 h-12 mx-auto mb-3 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"/>
          </svg>
          <p><%= I18n.locale == :fr ? 'Jurisprudence bientôt disponible' : 'Rechtspraak binnenkort beschikbaar' %></p>
        </div>
      <% end %>
    </div>
    
    <!-- Panel 3: Parliamentary Documents -->
    <div data-tabs-target="panel" class="px-6 py-5 hidden">
      <div class="flex items-center justify-between mb-4">
        <p class="text-sm text-gray-600 dark:text-gray-400">
          <%= I18n.locale == :fr ? 'Documents parlementaires récents' : 'Recente parlementaire documenten' %>
        </p>
      </div>
      <% 
        begin
          parl_db_path = ENV.fetch('PARLIAMENTARY_DB') { Rails.env.production? ? '/mnt/shared/parliamentary.sqlite3' : Rails.root.join('storage', 'parliamentary.sqlite3').to_s }
          if File.exist?(parl_db_path)
            parl_db = SQLite3::Database.new(parl_db_path)
            recent_parl = parl_db.execute("SELECT id, title, parliament, dossier_number, date FROM documents ORDER BY date DESC LIMIT 8")
          else
            recent_parl = []
          end
        rescue => e
          recent_parl = []
        end
        parliament_labels = { 'kamer' => 'Kamer', 'senaat' => 'Senaat', 'vlaams' => 'Vlaams Parlement', 'brussels' => 'Brussels Parlement', 'waals' => 'Waals Parlement' }
      %>
      <% if recent_parl.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% recent_parl.each do |p| %>
            <div class="block p-3 rounded-lg border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
              <div class="font-medium text-gray-900 dark:text-white text-sm line-clamp-2"><%= p[1] %></div>
              <div class="text-xs text-gray-500 dark:text-gray-400 mt-1"><%= parliament_labels[p[2]] || p[2] %> - <%= p[3] %> - <%= p[4] %></div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8 text-gray-500 dark:text-gray-400">
          <svg class="w-12 h-12 mx-auto mb-3 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
          </svg>
          <p><%= I18n.locale == :fr ? 'Documents parlementaires bientôt disponibles' : 'Parlementaire stukken binnenkort beschikbaar' %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
