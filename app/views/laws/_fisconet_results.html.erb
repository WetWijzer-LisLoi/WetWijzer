<% if @fisconet_results.present? %>
  <div class="mt-6 bg-white dark:bg-midnight rounded-xl shadow-lg overflow-hidden w-full">
    <div class="px-4 py-3 bg-amber-50 dark:bg-amber-900/20 border-b border-amber-200 dark:border-amber-700/50">
      <div class="flex items-center gap-2">
        <span class="text-amber-600 dark:text-amber-400">ðŸ’°</span>
        <h3 class="text-sm font-semibold text-amber-800 dark:text-amber-300">
          <%= t('fisconet.title', default: 'WIB 92 - Wetboek Inkomstenbelastingen') %>
        </h3>
        <span class="ml-auto text-xs text-amber-600 dark:text-amber-400">
          <%= @fisconet_results.size %> <%= t('fisconet.results', default: 'resultaten') %>
        </span>
      </div>
      <p class="text-xs text-amber-700 dark:text-amber-400/80 mt-1">
        <%= t('fisconet.subtitle', default: 'Belgisch fiscaal recht via FisconetPlus') %>
      </p>
    </div>
    
    <div class="divide-y divide-gray-100 dark:divide-gray-700">
      <% @fisconet_results.first(10).each do |article| %>
        <div class="px-4 py-3 hover:bg-gray-50 dark:hover:bg-gray-800/50">
          <div class="flex items-start gap-3">
            <div class="flex-shrink-0 w-20 text-center">
              <span class="inline-block px-2 py-1 text-xs font-medium rounded bg-amber-100 dark:bg-amber-900/40 text-amber-700 dark:text-amber-300">
                Art. <%= article[:article_number] %>
              </span>
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2 mb-1">
                <span class="text-xs text-gray-500 dark:text-gray-400">
                  <%= article[:document_type] %>
                </span>
                <% if article[:section_path].present? %>
                  <span class="text-xs text-gray-400 dark:text-gray-500">
                    Â· <%= article[:section_path] %>
                  </span>
                <% end %>
              </div>
              <p class="text-sm text-gray-700 dark:text-gray-300 line-clamp-2">
                <%= truncate(article[:text_preview] || article[:text], length: 200) %>
              </p>
            </div>
            <div class="flex-shrink-0">
              <% if article[:fisconet_id].present? %>
                <a href="https://eservices.minfin.fgov.be/myminfin-web/pages/fisconet?document=<%= article[:fisconet_id] %>" 
                   target="_blank"
                   class="inline-flex items-center gap-1 px-2 py-1 text-xs font-medium text-amber-600 hover:text-amber-700 dark:text-amber-400 dark:hover:text-amber-300"
                   title="<%= t('fisconet.view_on_fisconet', default: 'Bekijk op FisconetPlus') %>">
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                  </svg>
                  FisconetPlus
                </a>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <% if @fisconet_results.size > 10 %>
      <div class="px-4 py-2 bg-gray-50 dark:bg-gray-800/50 text-center">
        <span class="text-xs text-gray-500 dark:text-gray-400">
          <%= t('fisconet.more_results', default: 'En %{count} meer resultaten...') % { count: @fisconet_results.size - 10 } %>
        </span>
      </div>
    <% end %>
  </div>
<% end %>
