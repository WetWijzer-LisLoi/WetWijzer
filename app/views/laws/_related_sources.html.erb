<% if related_parliamentary.present? || related_jurisprudence.present? %>
<div class="p-4 md:p-6">
  <h2 class="text-lg font-semibold text-gray-900 dark:text-[var(--accent-500)] mb-4">
    <% if I18n.locale == :fr %>Sources connexes<% else %>Gerelateerde bronnen<% end %>
  </h2>
  
  <div class="space-y-4">
    <% if related_parliamentary.present? %>
      <div>
        <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2 flex items-center gap-2">
          <svg class="w-4 h-4 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
          </svg>
          <% if I18n.locale == :fr %>Travaux préparatoires<% else %>Parlementaire voorbereidingen<% end %>
          <span class="text-xs text-gray-400">(<%= related_parliamentary.size %>)</span>
        </h3>
        <div class="space-y-1">
          <% related_parliamentary.each do |doc| %>
            <a href="<%= parliamentary_path(doc[:id]) %>" 
               class="block p-2 rounded-lg hover:bg-purple-50 dark:hover:bg-purple-900/20 transition-colors group">
              <div class="flex items-center justify-between gap-2">
                <div class="flex-1 min-w-0">
                  <span class="text-sm text-gray-900 dark:text-white group-hover:text-purple-700 dark:group-hover:text-purple-300">
                    <%= doc[:title]&.truncate(60) || doc[:document_number] %>
                  </span>
                  <div class="flex items-center gap-2 text-xs text-gray-500 dark:text-gray-400">
                    <span class="uppercase"><%= doc[:parliament] %></span>
                    <span><%= doc[:dossier_number] %></span>
                    <% if doc[:document_type].present? %>
                      <span class="px-1.5 py-0.5 bg-purple-100 dark:bg-purple-900/50 text-purple-700 dark:text-purple-300 rounded">
                        <%= doc[:document_type].to_s.gsub('_', ' ') %>
                      </span>
                    <% end %>
                  </div>
                </div>
                <svg class="w-4 h-4 text-gray-400 group-hover:text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </a>
          <% end %>
        </div>
        <a href="<%= parliamentary_work_path(q: law.numac) %>" 
           class="inline-flex items-center gap-1 mt-2 text-xs text-purple-600 dark:text-purple-400 hover:underline">
          <% if I18n.locale == :fr %>Voir tous les travaux préparatoires<% else %>Alle parlementaire documenten bekijken<% end %>
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </a>
      </div>
    <% end %>

    <% if related_jurisprudence.present? %>
      <div class="<%= 'pt-4 border-t border-gray-200 dark:border-gray-700' if related_parliamentary.present? %>">
        <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2 flex items-center gap-2">
          <svg class="w-4 h-4 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"/>
          </svg>
          <% if I18n.locale == :fr %>Jurisprudence citant cette loi<% else %>Rechtspraak die deze wet citeert<% end %>
          <span class="text-xs text-gray-400">(<%= related_jurisprudence.size %>)</span>
        </h3>
        <div class="space-y-1">
          <% related_jurisprudence.each do |case_item| %>
            <a href="<%= jurisprudence_path(case_item[:id]) %>" 
               class="block p-2 rounded-lg hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-colors group">
              <div class="flex items-center justify-between gap-2">
                <div class="flex-1 min-w-0">
                  <span class="text-sm text-gray-900 dark:text-white group-hover:text-blue-700 dark:group-hover:text-blue-300 font-mono">
                    <%= case_item[:case_number]&.truncate(40) %>
                  </span>
                  <div class="flex items-center gap-2 text-xs text-gray-500 dark:text-gray-400">
                    <span><%= case_item[:court]&.truncate(25) %></span>
                    <span><%= case_item[:decision_date] %></span>
                    <% if case_item[:subject_matter].present? %>
                      <span class="truncate max-w-[150px]"><%= case_item[:subject_matter] %></span>
                    <% end %>
                  </div>
                </div>
                <svg class="w-4 h-4 text-gray-400 group-hover:text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </div>
            </a>
          <% end %>
        </div>
        <a href="<%= rechtspraak_path %>" 
           class="inline-flex items-center gap-1 mt-2 text-xs text-blue-600 dark:text-blue-400 hover:underline">
          <% if I18n.locale == :fr %>Rechercher dans la jurisprudence<% else %>Zoeken in rechtspraak<% end %>
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </a>
      </div>
    <% end %>
  </div>
</div>
<% end %>
