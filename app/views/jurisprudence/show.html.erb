<% @title = "#{@case[:court]} - #{@case[:case_number]}" %>

<div class="max-w-4xl mx-auto">
  <!-- Back link -->
  <div class="mb-4">
    <a href="<%= jurisprudence_index_path %>" 
       class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline">
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      <% if I18n.locale == :fr %>Retour √† la liste<% else %>Terug naar overzicht<% end %>
    </a>
  </div>

  <!-- Case header -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden mb-6">
    <div class="p-6">
      <div class="flex items-start justify-between gap-4 mb-4">
        <div class="flex-1 min-w-0">
          <!-- ECLI with copy button -->
          <div class="flex items-center gap-2 mb-2">
            <h1 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-white truncate">
              <%= @case[:case_number] %>
            </h1>
            <button type="button" 
                    onclick="navigator.clipboard.writeText('<%= @case[:case_number] %>'); this.querySelector('span').textContent = '‚úì'"
                    class="flex-shrink-0 p-1.5 text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-700 rounded"
                    title="<%= I18n.locale == :fr ? 'Copier ECLI' : 'Kopieer ECLI' %>">
              <span class="text-xs"><svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/></svg></span>
            </button>
          </div>
          <div class="flex flex-wrap gap-2">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200">
              üèõÔ∏è <%= @case[:court] %>
            </span>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200">
              üìÖ <%= @case[:decision_date] %>
            </span>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200">
              üåê <%= @case[:language_id].to_s.upcase.start_with?('N') ? 'NL' : 'FR' %>
            </span>
            <% if @case[:decision_type].present? %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200">
                <%= @case[:decision_type].capitalize %>
              </span>
            <% end %>
            <% if @case[:outcome].present? %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-amber-100 dark:bg-amber-900 text-amber-800 dark:text-amber-200">
                <%= @case[:outcome] %>
              </span>
            <% end %>
          </div>
        </div>
        <div class="flex flex-col sm:flex-row gap-2">
          <%# Calculate appeal deadline button %>
          <% appeal_info = court_appeal_info(@case[:court]) %>
          <% if appeal_info %>
            <a href="<%= tools_deadline_calculator_path(mode: 'deadline', service_date: @case[:decision_date], deadline_days: appeal_info[:deadline_days]) %>"
               class="flex-shrink-0 px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white font-medium rounded-lg inline-flex items-center gap-2"
               title="<%= I18n.locale == :fr ? "Calculer le d√©lai d'appel (#{appeal_info[:deadline_days]} jours)" : "Bereken beroepstermijn (#{appeal_info[:deadline_days]} dagen)" %>">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
              </svg>
              <span class="hidden sm:inline"><% if I18n.locale == :fr %>D√©lai d'appel<% else %>Beroepstermijn<% end %></span>
            </a>
          <% end %>
          <% if @case[:url].present? %>
            <a href="<%= @case[:url] %>" target="_blank" rel="noopener"
               class="flex-shrink-0 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg inline-flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
              <span class="hidden sm:inline"><% if I18n.locale == :fr %>Source<% else %>Bron<% end %></span>
            </a>
          <% end %>
        </div>
      </div>

      <!-- Subject matter -->
      <% if @case[:subject_matter].present? %>
        <div class="mb-4">
          <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">
            <% if I18n.locale == :fr %>Mati√®re<% else %>Rechtsgebied<% end %>
          </h3>
          <div class="flex flex-wrap gap-1">
            <% @case[:subject_matter].split(',').map(&:strip).each do |subject| %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300">
                <%= subject %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Referenced laws -->
      <% if @case[:laws_referenced].present? %>
        <div class="mb-4">
          <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">
            <% if I18n.locale == :fr %>L√©gislation cit√©e<% else %>Geciteerde wetgeving<% end %>
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-300">
            <%= @case[:laws_referenced] %>
          </p>
        </div>
      <% end %>

      <% if @case[:summary].present? %>
        <div>
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
            <% if I18n.locale == :fr %>R√©sum√©<% else %>Samenvatting<% end %>
          </h2>
          <div class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg text-gray-700 dark:text-gray-300">
            <%= @case[:summary] %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Full text -->
  <% if @case[:full_text].present? %>
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
          <% if I18n.locale == :fr %>Texte int√©gral<% else %>Volledige tekst<% end %>
        </h2>
        <div class="prose dark:prose-invert max-w-none">
          <div class="whitespace-pre-wrap text-sm text-gray-700 dark:text-gray-300 leading-relaxed">
<%= @case[:full_text] %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Ask chatbot -->
  <div class="mt-6 p-4 bg-blue-50 dark:bg-blue-900/30 rounded-xl">
    <div class="flex items-center gap-4">
      <div class="flex-shrink-0">
        <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
        </svg>
      </div>
      <div class="flex-1">
        <h3 class="font-medium text-gray-900 dark:text-white">
          <% if I18n.locale == :fr %>
            Questions sur cet arr√™t?
          <% else %>
            Vragen over dit arrest?
          <% end %>
        </h3>
        <p class="text-sm text-gray-600 dark:text-gray-400">
          <% if I18n.locale == :fr %>
            Posez vos questions √† notre assistant IA juridique
          <% else %>
            Stel uw vragen aan onze juridische AI-assistent
          <% end %>
        </p>
      </div>
      <a href="<%= chatbot_path(source: 'jurisprudence') %>"
         class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg">
        <% if I18n.locale == :fr %>Ouvrir le chatbot<% else %>Open chatbot<% end %>
      </a>
    </div>
  </div>
</div>
