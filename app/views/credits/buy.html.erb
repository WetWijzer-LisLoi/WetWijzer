<%= content_for :title, t('credits.buy_credits') %>

<div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto flex gap-8">
    <%= render 'layouts/account_sidebar' %>
    
    <main class="flex-1 min-w-0">
      <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
          <%= t('credits.buy_credits') %>
        </h1>
        <p class="text-gray-600 dark:text-gray-400 mt-1">
          <%= t('credits.buy_description', default: 'Choose a credit package to top up your balance.') %>
        </p>
      </div>

      <!-- Current Balance Banner -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4 mb-6 flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-full bg-green-100 dark:bg-green-900/50 flex items-center justify-center">
            <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <p class="text-sm text-gray-500 dark:text-gray-400"><%= t('credits.current_balance', default: 'Current balance') %></p>
            <p class="text-lg font-bold text-gray-900 dark:text-white"><%= @current_credits %> <%= t('credits.credits_label') %></p>
          </div>
        </div>
        <%= link_to credits_path, class: "text-sm text-blue-600 hover:text-blue-700 dark:text-blue-400" do %>
          <%= t('credits.view_history', default: 'View history') %> â†’
        <% end %>
      </div>

      <!-- Credit Packages - Vertical Layout -->
      <div class="space-y-4">
        <% @packages.each do |package| %>
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
            <div class="p-6 flex items-center justify-between">
              <div class="flex-1">
                <div class="flex items-center gap-3">
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                    <%= package[:name] %>
                  </h3>
                  <% if package[:id] == 'standard' %>
                    <span class="px-2 py-0.5 text-xs font-medium rounded-full bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                      <%= t('credits.popular', default: 'Popular') %>
                    </span>
                  <% end %>
                </div>
                <p class="text-gray-600 dark:text-gray-400 text-sm mt-1">
                  <%= package[:description] %>
                </p>
                
                <ul class="mt-3 flex flex-wrap gap-4 text-sm text-gray-600 dark:text-gray-400">
                  <li class="flex items-center gap-1">
                    <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <%= t('credits.package_credits', count: package[:credits]) %>
                  </li>
                  <li class="flex items-center gap-1">
                    <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    ~<%= package[:questions] %> <%= t('credits.questions', default: 'questions') %>
                  </li>
                  <li class="flex items-center gap-1">
                    <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <%= t('credits.never_expires') %>
                  </li>
                </ul>
              </div>
              
              <div class="flex items-center gap-6 ml-6">
                <div class="text-right">
                  <span class="text-3xl font-bold text-gray-900 dark:text-white">
                    <%= package[:price_display] %>
                  </span>
                </div>
                
                <%= link_to credits_purchase_path(package: package[:id]), 
                    method: :post,
                    class: "px-6 py-3 rounded-lg font-medium transition-colors bg-indigo-600 hover:bg-indigo-700 text-white whitespace-nowrap" do %>
                  <%= t('credits.buy_now') %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Credit Costs Info -->
      <div class="mt-8 bg-gray-100 dark:bg-gray-800/50 rounded-xl p-6">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
          <%= t('credits.costs_title') %>
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="text-center p-3 bg-white dark:bg-gray-800 rounded-lg">
            <div class="text-2xl font-bold text-gray-900 dark:text-white">5</div>
            <div class="text-xs text-gray-500 dark:text-gray-400"><%= t('credits.source_legislation') %></div>
          </div>
          <div class="text-center p-3 bg-white dark:bg-gray-800 rounded-lg">
            <div class="text-2xl font-bold text-gray-900 dark:text-white">7</div>
            <div class="text-xs text-gray-500 dark:text-gray-400"><%= t('credits.source_jurisprudence') %></div>
          </div>
          <div class="text-center p-3 bg-white dark:bg-gray-800 rounded-lg">
            <div class="text-2xl font-bold text-gray-900 dark:text-white">7</div>
            <div class="text-xs text-gray-500 dark:text-gray-400"><%= t('credits.source_parliamentary') %></div>
          </div>
          <div class="text-center p-3 bg-white dark:bg-gray-800 rounded-lg">
            <div class="text-2xl font-bold text-gray-900 dark:text-white">10</div>
            <div class="text-xs text-gray-500 dark:text-gray-400"><%= t('credits.source_all') %></div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
