<%= content_for :title, t('credits.title') %>

<div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto flex gap-8">
    <%= render 'layouts/account_sidebar' %>
    
    <main class="flex-1 min-w-0">
      <div class="max-w-4xl mx-auto px-4 py-8">
        <!-- Current Balance -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 mb-8">
          <div class="flex items-center justify-between">
            <div>
              <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
                <%= t('credits.your_balance') %>
              </h1>
              <p class="text-gray-600 dark:text-gray-400 mt-1">
                <%= t('credits.balance_description') %>
              </p>
            </div>
            <div class="text-right">
              <div class="text-4xl font-bold text-indigo-600 dark:text-indigo-400">
                <%= @current_credits %>
              </div>
              <div class="text-sm text-gray-500 dark:text-gray-400">
                <%= t('credits.credits_label') %>
              </div>
            </div>
          </div>

          <div class="mt-4 flex items-center justify-between">
            <div class="flex items-center gap-2 text-sm text-green-700 dark:text-green-300">
              <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <%= t('credits.never_expires') %>
            </div>
            <%= link_to credits_buy_path, class: "px-6 py-2 rounded-lg font-medium bg-indigo-600 hover:bg-indigo-700 text-white transition-colors" do %>
              <%= t('credits.buy_credits') %>
            <% end %>
          </div>
        </div>

        <!-- Credit Costs Info -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 mb-6">
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
            <%= t('credits.costs_title') %>
          </h2>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div class="text-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
              <div class="text-2xl font-bold text-gray-900 dark:text-white">5</div>
              <div class="text-xs text-gray-500 dark:text-gray-400"><%= t('credits.source_legislation') %></div>
            </div>
            <div class="text-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
              <div class="text-2xl font-bold text-gray-900 dark:text-white">7</div>
              <div class="text-xs text-gray-500 dark:text-gray-400"><%= t('credits.source_jurisprudence') %></div>
            </div>
            <div class="text-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
              <div class="text-2xl font-bold text-gray-900 dark:text-white">7</div>
              <div class="text-xs text-gray-500 dark:text-gray-400"><%= t('credits.source_parliamentary') %></div>
            </div>
            <div class="text-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
              <div class="text-2xl font-bold text-gray-900 dark:text-white">10</div>
              <div class="text-xs text-gray-500 dark:text-gray-400"><%= t('credits.source_all') %></div>
            </div>
          </div>
        </div>

        <!-- Purchase History -->
  <% if @credit_purchases.any? %>
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
      <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-4">
        <%= t('credits.purchase_history') %>
      </h2>
      
      <div class="overflow-x-auto">
        <table class="w-full text-sm">
          <thead>
            <tr class="text-left text-gray-500 dark:text-gray-400 border-b dark:border-gray-700">
              <th class="pb-3"><%= t('credits.table_date') %></th>
              <th class="pb-3"><%= t('credits.table_package') %></th>
              <th class="pb-3"><%= t('credits.table_credits') %></th>
              <th class="pb-3"><%= t('credits.table_amount') %></th>
              <th class="pb-3"><%= t('credits.table_status') %></th>
            </tr>
          </thead>
          <tbody class="divide-y dark:divide-gray-700">
            <% @credit_purchases.each do |purchase| %>
              <tr>
                <td class="py-3 text-gray-900 dark:text-white">
                  <%= l(purchase.created_at, format: :short) %>
                </td>
                <td class="py-3 text-gray-900 dark:text-white">
                  <%= t("credits.packages.#{purchase.package}.name") %>
                </td>
                <td class="py-3 text-gray-900 dark:text-white">
                  <%= purchase.credits_granted %>
                </td>
                <td class="py-3 text-gray-900 dark:text-white">
                  â‚¬<%= purchase.price_euros %>
                </td>
                <td class="py-3">
                  <% status_class = case purchase.status
                       when 'completed' then 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200'
                       when 'pending' then 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200'
                       when 'failed' then 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200'
                       else 'bg-gray-100 text-gray-800 dark:bg-gray-900 dark:text-gray-200'
                     end %>
                  <span class="px-2 py-1 rounded-full text-xs font-medium <%= status_class %>">
                    <%= t("credits.status.#{purchase.status}") %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
      </div>
    </main>
  </div>
</div>
