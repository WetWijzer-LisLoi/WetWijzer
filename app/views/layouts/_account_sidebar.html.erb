<aside class="w-64 flex-shrink-0">
  <nav class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-4 sticky top-4">
    <div class="mb-4 pb-4 border-b border-gray-200 dark:border-gray-700">
      <div class="flex items-center">
        <div class="w-10 h-10 rounded-full bg-blue-600 text-white flex items-center justify-center font-semibold text-lg">
          <%= (current_user.name&.first || current_user.email.first).upcase %>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-gray-900 dark:text-white truncate max-w-[160px]">
            <%= current_user.name || current_user.email.split('@').first %>
          </p>
          <p class="text-xs text-gray-500 dark:text-gray-400 truncate max-w-[160px]">
            <%= current_user.email %>
          </p>
        </div>
      </div>
    </div>

    <ul class="space-y-1">
      <li>
        <%= link_to account_path, class: "flex items-center px-3 py-2 text-sm rounded-lg transition-colors #{current_page?(account_path) ? 'bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 font-medium' : 'text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700'}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
          <%= t('account.title', default: 'Account') %>
        <% end %>
      </li>
      <li>
        <%= link_to credits_path, class: "flex items-center px-3 py-2 text-sm rounded-lg transition-colors #{current_page?(credits_path) ? 'bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 font-medium' : 'text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700'}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          <%= t('credits.title', default: 'Credits') %>
          <span class="ml-auto px-2 py-0.5 text-xs font-medium rounded-full bg-green-100 dark:bg-green-900/50 text-green-700 dark:text-green-300">
            <%= current_user.credits %>
          </span>
        <% end %>
      </li>
      <li>
        <%= link_to credits_buy_path, class: "flex items-center px-3 py-2 text-sm rounded-lg transition-colors #{current_page?(credits_buy_path) ? 'bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 font-medium' : 'text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700'}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/></svg>
          <%= t('credits.buy_credits', default: 'Buy Credits') %>
        <% end %>
      </li>
      <li>
        <%= link_to subscription_path, class: "flex items-center px-3 py-2 text-sm rounded-lg transition-colors #{current_page?(subscription_path) ? 'bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 font-medium' : 'text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700'}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/></svg>
          <%= t('subscriptions.title', default: 'Subscription') %>
        <% end %>
      </li>
      <li>
        <%= link_to billing_info_path, class: "flex items-center px-3 py-2 text-sm rounded-lg transition-colors #{current_page?(billing_info_path) ? 'bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 font-medium' : 'text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700'}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
          <%= t('account.billing_info', default: 'Billing Info') %>
        <% end %>
      </li>

      <li class="pt-4 mt-4 border-t border-gray-200 dark:border-gray-700">
        <p class="px-3 mb-2 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">
          <%= t('account.security', default: 'Security') %>
        </p>
      </li>
      <li>
        <%= link_to setup_2fa_path, class: "flex items-center px-3 py-2 text-sm rounded-lg transition-colors #{current_page?(setup_2fa_path) ? 'bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 font-medium' : 'text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700'}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
          <%= t('account.two_factor', default: '2FA') %>
          <% if current_user.otp_enabled? %>
            <span class="ml-auto px-2 py-0.5 text-xs rounded-full bg-green-100 dark:bg-green-900/50 text-green-700 dark:text-green-300">âœ“</span>
          <% end %>
        <% end %>
      </li>
      <li>
        <%= link_to activity_log_path, class: "flex items-center px-3 py-2 text-sm rounded-lg transition-colors #{current_page?(activity_log_path) ? 'bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 font-medium' : 'text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700'}" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          <%= t('account.activity_log', default: 'Activity Log') %>
        <% end %>
      </li>
    </ul>

    <div class="mt-6 pt-4 border-t border-gray-200 dark:border-gray-700">
      <%= button_to logout_path, method: :delete, class: "flex items-center w-full px-3 py-2 text-sm text-red-600 dark:text-red-400 rounded-lg hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors" do %>
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/></svg>
        <%= t('auth.logout', default: 'Logout') %>
      <% end %>
    </div>
  </nav>
</aside>
