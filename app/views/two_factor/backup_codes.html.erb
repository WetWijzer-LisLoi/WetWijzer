<%= content_for :title, t('account.backup_codes') %>

<div class="min-h-screen bg-gray-50 dark:bg-gray-900 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md mx-auto">
    <div class="text-center mb-6">
      <div class="text-5xl mb-4">‚úÖ</div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
        <%= t('account.2fa_enabled') %>
      </h1>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
      <div class="bg-amber-50 dark:bg-amber-900/30 border border-amber-200 dark:border-amber-800 rounded-lg p-4 mb-6">
        <h2 class="font-bold text-amber-800 dark:text-amber-200 mb-2">
          ‚ö†Ô∏è <%= t('account.save_backup_codes') %>
        </h2>
        <p class="text-sm text-amber-700 dark:text-amber-300">
          <%= t('account.backup_codes_warning') %>
        </p>
      </div>

      <div class="grid grid-cols-2 gap-2 mb-6">
        <% @backup_codes.each do |code| %>
          <div class="bg-gray-100 dark:bg-gray-700 rounded px-3 py-2 text-center font-mono text-sm">
            <%= code %>
          </div>
        <% end %>
      </div>

      <div class="flex gap-3">
        <button onclick="navigator.clipboard.writeText('<%= @backup_codes.join('\n') %>')" 
                class="flex-1 py-2 px-4 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition">
          üìã <%= t('account.copy_codes') %>
        </button>
        <%= link_to account_path, class: "flex-1 py-2 px-4 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition text-center" do %>
          <%= t('account.done') %>
        <% end %>
      </div>
    </div>
  </div>
</div>
