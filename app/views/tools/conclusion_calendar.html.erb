<% fr = I18n.locale == :fr %>

<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <a href="<%= tools_path %>" class="text-sm text-blue-600 dark:text-blue-400 hover:underline">‚Üê <%= fr ? 'Tous les outils' : 'Alle tools' %></a>
  </div>

  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
      üìã <%= fr ? 'Calendrier de conclusions' : 'Conclusiekalender' %>
    </h1>
    <p class="text-gray-600 dark:text-gray-400">
      <%= fr ? 'G√©n√©rez automatiquement un calendrier de conclusions bas√© sur la date d\'introduction' : 'Genereer automatisch een conclusiekalender op basis van de inleidingsdatum' %>
    </p>
  </div>

  <!-- Generator Form -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 mb-6">
    <%= form_with url: tools_conclusion_calendar_path, method: :get, local: true, class: 'space-y-4' do %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
            <%= fr ? 'Date d\'introduction' : 'Inleidingsdatum' %> *
          </label>
          <input type="date" name="intro_date" value="<%= params[:intro_date] || Date.current.to_s %>"
                 class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white" required>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
            <%= fr ? 'Type de proc√©dure' : 'Type procedure' %>
          </label>
          <select name="procedure" class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white">
            <% @templates.each do |key, tpl| %>
              <option value="<%= key %>" <%= 'selected' if params[:procedure] == key.to_s %>>
                <%= fr ? tpl[:name_fr] : tpl[:name_nl] %> (<%= tpl[:default_days] %>d)
              </option>
            <% end %>
          </select>
        </div>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
            <%= fr ? 'Nombre de tours' : 'Aantal rondes' %>
          </label>
          <select name="rounds" class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white">
            <% (1..4).each do |r| %>
              <option value="<%= r %>" <%= 'selected' if (params[:rounds] || '2') == r.to_s %>><%= r %> <%= fr ? (r == 1 ? 'tour' : 'tours') : (r == 1 ? 'ronde' : 'rondes') %></option>
            <% end %>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
            <%= fr ? 'Votre r√¥le' : 'Uw rol' %>
          </label>
          <select name="role" class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white">
            <option value="plaintiff" <%= 'selected' if params[:role] != 'defendant' %>><%= fr ? 'Demandeur (conclut premier)' : 'Eiser (concludeert eerst)' %></option>
            <option value="defendant" <%= 'selected' if params[:role] == 'defendant' %>><%= fr ? 'D√©fendeur (conclut second)' : 'Verweerder (concludeert tweede)' %></option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
            <%= fr ? 'Jours par tour (optionnel)' : 'Dagen per ronde (optioneel)' %>
          </label>
          <input type="number" name="days" value="<%= params[:days] %>" min="1" max="90" placeholder="<%= fr ? 'Auto' : 'Auto' %>"
                 class="w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white">
        </div>
      </div>
      <button type="submit" class="px-6 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-md">
        <%= fr ? 'G√©n√©rer calendrier' : 'Kalender genereren' %>
      </button>
    <% end %>
  </div>

  <% if @error %>
    <div class="bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 rounded-lg p-4 mb-6">
      <p class="text-red-800 dark:text-red-200"><%= @error %></p>
    </div>
  <% end %>

  <% if @result %>
    <!-- Calendar Result -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 mb-6">
      <div class="flex justify-between items-start mb-4">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-white"><%= fr ? 'Calendrier de conclusions' : 'Conclusiekalender' %></h2>
        <button onclick="window.print()" class="text-sm text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200">
          üñ®Ô∏è <%= fr ? 'Imprimer' : 'Afdrukken' %>
        </button>
      </div>

      <div class="mb-4 p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg text-sm">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-2">
          <div><strong><%= fr ? 'Introduction:' : 'Inleiding:' %></strong> <%= I18n.l(@result[:intro_date], format: :short) %></div>
          <div><strong><%= fr ? 'Proc√©dure:' : 'Procedure:' %></strong> <%= fr ? @result[:procedure_name_fr] : @result[:procedure_name_nl] %></div>
          <div><strong><%= fr ? 'Tours:' : 'Rondes:' %></strong> <%= @result[:rounds] %></div>
          <div><strong><%= fr ? 'Jours/tour:' : 'Dagen/ronde:' %></strong> <%= @result[:days_per_round] %></div>
        </div>
      </div>

      <!-- Timeline -->
      <div class="relative">
        <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-gray-200 dark:bg-gray-600"></div>
        
        <!-- Intro -->
        <div class="relative pl-10 pb-6">
          <div class="absolute left-2 w-5 h-5 rounded-full bg-blue-500 border-4 border-white dark:border-gray-800"></div>
          <div class="bg-blue-50 dark:bg-blue-900/30 rounded-lg p-3">
            <p class="font-medium text-blue-800 dark:text-blue-200"><%= fr ? 'Introduction' : 'Inleiding' %></p>
            <p class="text-sm text-blue-600 dark:text-blue-300"><%= I18n.l(@result[:intro_date], format: :long) %></p>
          </div>
        </div>

        <!-- Conclusions -->
        <% @result[:conclusions].each_with_index do |conclusion, idx| %>
          <% is_plaintiff = conclusion[:party] == :plaintiff %>
          <div class="relative pl-10 pb-6">
            <div class="absolute left-2 w-5 h-5 rounded-full <%= is_plaintiff ? 'bg-green-500' : 'bg-orange-500' %> border-4 border-white dark:border-gray-800"></div>
            <div class="<%= is_plaintiff ? 'bg-green-50 dark:bg-green-900/30' : 'bg-orange-50 dark:bg-orange-900/30' %> rounded-lg p-3">
              <div class="flex justify-between items-start">
                <div>
                  <p class="font-medium <%= is_plaintiff ? 'text-green-800 dark:text-green-200' : 'text-orange-800 dark:text-orange-200' %>">
                    <%= fr ? "Tour #{conclusion[:round]}" : "Ronde #{conclusion[:round]}" %> - <%= fr ? conclusion[:party_fr] : conclusion[:party_nl] %>
                  </p>
                  <p class="text-sm <%= is_plaintiff ? 'text-green-600 dark:text-green-300' : 'text-orange-600 dark:text-orange-300' %>">
                    <%= I18n.l(conclusion[:date], format: :long) %>
                  </p>
                </div>
                <span class="text-xs px-2 py-1 rounded <%= is_plaintiff ? 'bg-green-200 dark:bg-green-800 text-green-800 dark:text-green-200' : 'bg-orange-200 dark:bg-orange-800 text-orange-800 dark:text-orange-200' %>">
                  <%= conclusion[:date].strftime('%a') %>
                </span>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Pleading -->
        <div class="relative pl-10">
          <div class="absolute left-2 w-5 h-5 rounded-full bg-purple-500 border-4 border-white dark:border-gray-800"></div>
          <div class="bg-purple-50 dark:bg-purple-900/30 rounded-lg p-3">
            <p class="font-medium text-purple-800 dark:text-purple-200"><%= fr ? 'Plaidoiries (sugg√©r√©)' : 'Pleidooien (suggestie)' %></p>
            <p class="text-sm text-purple-600 dark:text-purple-300"><%= I18n.l(@result[:suggested_pleading], format: :long) %></p>
          </div>
        </div>
      </div>

      <div class="mt-6 pt-4 border-t border-gray-200 dark:border-gray-700">
        <p class="text-xs text-gray-500 dark:text-gray-400">
          ‚ö†Ô∏è <%= fr ? 'Ce calendrier est indicatif. V√©rifiez toujours avec le greffe les d√©lais applicables √† votre affaire.' : 'Deze kalender is indicatief. Controleer altijd bij de griffie de geldende termijnen voor uw zaak.' %>
        </p>
      </div>
    </div>
  <% end %>

  <!-- Quick links -->
  <div class="mt-6 flex flex-wrap justify-center gap-4 text-sm">
    <a href="<%= tools_deadline_calculator_path %>" class="text-blue-600 dark:text-blue-400 hover:underline">
      üìÖ <%= fr ? 'Calculateur de d√©lais' : 'Termijncalculator' %>
    </a>
    <a href="<%= tools_checklist_path %>" class="text-blue-600 dark:text-blue-400 hover:underline">
      ‚úÖ <%= fr ? 'Checklists' : 'Checklists' %>
    </a>
    <a href="<%= tools_court_fees_path %>" class="text-blue-600 dark:text-blue-400 hover:underline">
      üí∞ <%= fr ? 'Droits de r√¥le' : 'Rolrechten' %>
    </a>
  </div>
</div>
