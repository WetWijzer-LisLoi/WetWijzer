root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
# Preserve trailing spaces in Markdown for hard line breaks
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.{rb,rake,ru,gemspec}]
indent_size = 2

[*.{js,ts,mts}]
indent_size = 2

[*.{scss,css}]
indent_size = 2
